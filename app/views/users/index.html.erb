<h1>Listing users</h1>

<table>
  <tr>
	<th>User ID</th>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for user in @users %>
  <tr>
	<td><%=h user.id %></td>
    <td><%=h user.name %></td>
    <td><%=h user.login %></td>

    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= link_to 'New user', new_user_path %>


