<h1>Player Results</h1>
	<table>
		<tr>
		<th>Name</th>
		<th>Organisation</th>
		<th>Correct</th>
		<th>Completed</th>
		</tr>
	<% for player in @current_players %>


	<tr>
	<td><%= player.user.login%></td>
	<td><%= player.user.organisation %></td>
	<td><%= Response.count(:conditions => {:correct => true, :player_id => player.id})%></td>
  <td><%= Response.count(:conditions => {:player_id => player.id}) %> out of <%= @hunt.questions.count %></td>
	</tr>
	<% end %>
  </table>
  <br />
<% link_to(hunt_path(@hunt)) do %>
<div id="arrowlinks">
<div id="leftarrow"><%= image_tag '/images/buttons/back.png' %> <% end%></div>
 <div id="rightarrow"> <%= link_to 'Back to Dashboard', user_hunts_path(current_user) %></div></div>
<br />