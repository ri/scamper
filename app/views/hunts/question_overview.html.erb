<% i = 1 %>
<% for question in @hunt.questions %>
  Question <%= i%>
  <br />
  <%= question.question %>
  <br />
  <%= question.correct_answer %>
  <% if question.hints.first %>
  <%= qrcode(question.hints.first.hint) %>
  <% end %>
  <% i += 1 %>
<% end %>
<%= link_to_function("Print this Page", "javascript:print()") %>
<%= link_to('Back to Dashboard', hunts_path(@hunt)) %>