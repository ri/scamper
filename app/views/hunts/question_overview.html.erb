<% i = 1 %>
<% for question in @hunt.questions %>
  Question <%= i%>
  <br />
  Question: <%= question.question %>
  <br />
  Answer: <%= question.correct_answer %>
  <% if question.hints.first %>
  Hint: <%= question.hints.first.hint %>
  <%= qrcode(question.hints.first.hint) %>
  <% end %>
  <% i += 1 %>
<% end %>
