<h1>Listing hints</h1>

<table>
  <tr>
	<th>Hunt Id</th>    
    <th>Hint</th>
	<th>QR Code </th>
	<th>Destroy</th>
  </tr>

<% for hint in @hint%>
  <tr>
	<td><%=h hint.id %> </td>
    <td><%=h hint.hint %></td>

 	<td><%= qrcode(h hint.hint) %></td>
    <td><%= link_to 'Destroy', hunt_question_hint_path(@hunt, @question, hint), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

<%end%>

<p><%= link_to 'New hint', new_hunt_question_hint_path(@hunt, @question) %>
</p>
<p><%= link_to 'Back to Questions', hunt_questions_path(@hunt) %>
</p>
</table>