<h1>Listing hints</h1>

<table>
  <tr>
    <th>Hunt Id</th>    
    <th>Hint</th>
    <th>QR Code </th>
    <th>Destroy</th>
  </tr>

<% for hint in @hint%>
  <tr>
    <td><%=h hint.id %> </td>
    <td><%=h hint.hint %></td>
    <td><%= qrcode(hint.hint) %></td>
    <td><%= link_to 'Destroy', hunt_question_hint_path(@question, hint), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>

<%end%>
</table>