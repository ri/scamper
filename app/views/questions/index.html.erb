<h1>Listing questions</h1>

<table border=1px>
  <tr>
    <th>Question ID</th>
    <th>Question</th>

    <th>Answer</th>
    <th>Hunt_id</th>
	<th></th>
	<th></th>
	<th></th>
  </tr>

<% for question in @questions %>
  <tr>
	<td><%=h question.id %></td>
    <td><%=h question.question %></td>
	<td><%=h question.answer %></td>
	<td><%=h question.hunt_id %></td>
	
    <td><%= link_to 'Show', question %></td>
    <td><%= link_to 'Edit', edit_question_path(question) %></td>
    <td><%= link_to 'Destroy', question, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<h1>Add a Question</h1>
<% form_for(@new_question) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </p>
 <p>

<b>Hunts:</b><br/>
 	<select name="question[hunt_id]">
 		<% @hunts.each do |hunt| %>
 		<option value="<%= hunt.id %>"> 
 		<%= hunt.name %>
 		</option>
 		<% end %>
 	</select>
 </p>
  <p>
    <%= f.submit "Create" %>
  </p>

<% end %>
