<h1>New question</h1>

<% form_for(@question) do |f| %>
  <%= f.error_messages %>


  <p>
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </p>
  <p>
    <%= f.label :question %><br />
    <%= f.text_area :question %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
 <p>
 
<b>Hunts:</b><br/>
 	<select name="question[hunt_id]">
 		<% @hunts.each do |hunt| %>
 		<option value="<%= hunt.id %>"> 
 		<%= hunt.name %>
 		</option>
 		<% end %>
 	</select>
 </p>

<% end %>

<%= link_to 'Back', questions_path %>
