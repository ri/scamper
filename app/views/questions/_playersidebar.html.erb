<div id="questions">
<% i = 1 %>
<% for question in @hunt.questions %>
   <% if question == @question %>
      <div id="activeq">Question <%= i%></div>
    <% else %>
      <div id="inactiveq"><% link_to(hunt_question_response_path(@hunt, question)) do %>
        Question <%= i%>
        <% end %></div>
    <% end %>
    <% i += 1 %>
<% end %>
</div>