<html>
 <head>
		<script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=true
      &amp;key=ABQIAAAAKjtJ2SRbXEm623VFL3-AARQG4PaVB7S9n58-rdHaI0_BpGsanhSK_Lq58Tr3ftDW9OwDNFnsr1wkzA"
      type="text/javascript">
    </script>
   <script type="text/javascript">

	function initialize() {
	  if (GBrowserIsCompatible()) {

	   var mapOptions = {
		    googleBarOptions : {
		      style : "new",
		    }
		  }
		  map = new GMap2(document.getElementById("map_canvas"), mapOptions);
			var center = new GLatLng(37.4419, -122.1419);
			map.setCenter(center, 13);
		  map.setUIToDefault();
		  map.enableGoogleBar();
		
			var marker = new GMarker(center, {draggable: true});

			GEvent.addListener(marker, "dragstart", function() {
			  map.closeInfoWindow();
			  });

			GEvent.addListener(marker, "dragend", function() {
			  marker.openInfoWindowHtml("Just bouncing along...");
			  });

			map.addOverlay(marker);
						
			GEvent.addListener(map, "dragend", function() {
			  center = map.getCenter();
				marker.setLatLng(center) 
			});
		  }
	}
   </script>
 </head>
 <body onload="initialize()" onunload="GUnload()">
 <h1>Edit Question</h1>
 <div id="map_canvas" style="width: 500px; height: 300px"></div>

 <form action="../update/<%= @question.id %>" method="POST">
  <input id="question_id" name="question[id]" size="30" 
         type="hidden" value="<%= @question.id %>" />
  <p><b>Question</b><br>
  <input id="question_question" name="question[question]" size="30" 
         type="text" value="<%= @question.question %>" />
  </p>
  <p><b>answer</b><br>
  <input id="question_answer" name="question[answer]" 
         size="30" type="text" 
         value="<%= @question.answer %>" />
  </p>



  <input type="submit" value="Select this location" />
 </form>

 <a href="/question/show/<%= @question.id %>">
   Show
 </a> | 
  <a href="/question/show">
